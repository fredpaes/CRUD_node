<% include partials/_header %>

<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-body">
            <form action="/edit/<%= task._id %>" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="Inserte un título" value="<%= task.title %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description" cols="80" placeholder="Inserte una descripción"><%= task.description %></textarea>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Editar</button>
            </form>
        </div>
    </div>
</div>

<% include partials/_footer %>